{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=PrintManagementDB;Username=postgres;Password=your_password_here"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] [{SourceContext}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  "Jwt": {
    "SecretKey": "your-super-secret-jwt-key-minimum-32-characters-long-for-security",
    "Issuer": "PrintManagementSystem",
    "Audience": "PrintManagementUsers",
    "ExpiryMinutes": 60,
    "RefreshTokenExpiryDays": 7
  },

  "CupsSettings": {
    "ServerUrl": "http://localhost:631",
    "Username": "admin",
    "Password": "admin",
    "TimeoutSeconds": 30,
    "MaxRetries": 3,
    "RetryDelaySeconds": 5
  },

  "FileStorage": {
    "BasePath": "/var/printmanagement/storage",
    "UsersDirectory": "users",
    "JobsDirectory": "jobs",
    "TempDirectory": "temp",
    "MaxFileSizeMB": 100,
    "AllowedExtensions": [ ".pdf", ".jpg", ".jpeg", ".png", ".gif", ".bmp", ".tiff", ".doc", ".docx", ".xls", ".xlsx", ".ppt", ".pptx" ],
    "AutoCleanupEnabled": true,
    "CleanupIntervalHours": 24,
    "DeletedFilesRetentionDays": 30,
    "TempFilesRetentionHours": 24
  },

  "DocumentProcessing": {
    "ProcessingIntervalSeconds": 5,
    "MaxConcurrentProcessing": 3,
    "PdfDpi": 300,
    "ImageQuality": 95,
    "TempProcessingPath": "/var/printmanagement/temp/processing"
  },

  "PrintRouting": {
    "RoutingIntervalSeconds": 3,
    "MaxConcurrentRouting": 5,
    "PreferHighPriorityPrinters": true,
    "LoadBalancingEnabled": true
  },

  "PrintQueue": {
    "QueueProcessingIntervalSeconds": 2,
    "MaxQueueSize": 100,
    "ReorderQueueEnabled": true,
    "StuckJobTimeoutMinutes": 30
  },

  "PrintExecution": {
    "ExecutionIntervalSeconds": 2,
    "MaxConcurrentExecutions": 3,
    "JobStatusCheckIntervalSeconds": 5,
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 10
  },

  "Statistics": {
    "AggregationIntervalMinutes": 15,
    "DailyAggregationHour": 2,
    "RetentionDays": 365,
    "DetailedLoggingEnabled": true
  },

  "PrinterMonitoring": {
    "MonitoringIntervalSeconds": 30,
    "HealthCheckTimeoutSeconds": 10,
    "OfflineThresholdMinutes": 5,
    "AlertsEnabled": true
  },

  "AllowedHosts": "*"
}